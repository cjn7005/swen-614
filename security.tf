# EC2 instance resource definition
resource "aws_security_group" "allow_http_shh" {
  name        = "web-sg"
  description = "Allow HTTP and SSH access"
  vpc_id      = "vpc-0cae8c414a5458df7"

  ingress {
    description = "HTTP"
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    description = "SSH"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "allow_http_shh"
  }
}
